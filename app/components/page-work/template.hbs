<div class="page work" id="work">
    <a name="work"></a>
    <div class="page__inner">
        <h2>What Does My Work Look Like?</h2>
        <!--<img src="/images/underconstruction.gif" alt="Under Construction"/>-->
        <div class="timeline__container">
            <ul>
                {{#each projects as |project|}}
                    <li class="timeline__item animated" data-title="{{project.title}}" {{action setCurrentProject project.id}} data-projectID="{{project.id}}" style="background-image: url({{project.featuredImage}});">
                        <!--<a href="#">-->
                            <!--<span class="timeline__itemTitle">{{!-- project.title --}}</span>-->
                        <!--</a>-->
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <!-- Display full resume here ?-->

    <!-- Project-post-->
    {{#if showProjectDetail}}
        <div class="projectPost">
            <div class="projectPost__inner">
                <div class="projectPost--close" {{action toggleDetail}}></div>
                <div class="projectPost__details">
                    <h1 class="animated flipInY">{{currentProject.title}}</h1>
                    <p class="animated flipInX">{{currentProject.description}}</p>

                    <div class="screenshot__wrapper animated fadeInUp">
                        {{#each currentProject.screenshots as |shot|}}
                            <div class="screenshot__group">
                                <div class="screenshot__group__inner">
                                    {{light-box href=shot.path data-lightbox="screenshots" data-title=shot.title data-class="screenshot__groupImage animated fadeInLeftBig"}}

                                    <div class="screenshot__groupDetails animated fadeInRightBig">
                                        <h2 class="animated fadeInLeftBig">{{shot.title}}</h2>
                                        <p class="animated fadeInRightBig">{{{shot.description}}}</p>

                                        <h3>Highlights & Technology</h3>
                                        <ul>
                                            {{#each shot.features as |feature|}}
                                                <li title="{{feature.subDescription}}">
                                                    <span>{{feature.description}}</span>
                                                    <span>{{feature.subDescription}}</span>
                                                </li>
                                            {{/each}}
                                        </ul>

                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
</div>